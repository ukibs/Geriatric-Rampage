    <event eventtype="3" enumb="0">
      <action>
        <libid>1</libid>
        <id>603</id>
        <kind>7</kind>
        <userelative>0</userelative>
        <isquestion>0</isquestion>
        <useapplyto>-1</useapplyto>
        <exetype>2</exetype>
        <functionname></functionname>
        <codestring></codestring>
        <whoName>self</whoName>
        <relative>0</relative>
        <isnot>0</isnot>
        <arguments>
          <argument>
            <kind>1</kind>
            <string>//Get the keys
key_left = keyboard_check(vk_left);
key_right = keyboard_check(vk_right);
key_space_pressed = keyboard_check_pressed(vk_space);
key_space_released = keyboard_check_released(vk_space);
//Check turns played
if(turn &lt; 3){
    switch(phase){
        case 0: //Oponent´s turn
            //In higher dificulty, if the player have a ball nearer than the oponent´s
            //he will try to move it out
            if(turn &gt; 1){
            script_execute(scr_ball_distance_check);
            if(global.petanca_dificulty &gt; 2 &amp;&amp;
                min_player_ball_distance &lt; min_oponent_ball_distance)
                boliche_direction = point_direction(pointer.x, pointer.y, 
                    player_ball[player_nearer_ball].x, 
                    player_ball[player_nearer_ball].y); 
            else
                boliche_direction = point_direction(pointer.x, pointer.y, boliche.x, boliche.y);
            }
            else
                boliche_direction = point_direction(pointer.x, pointer.y, boliche.x, boliche.y);
            //Habrá que revisar si la dificultad sube de 10
            throw_deviation = random(10 - global.petanca_dificulty);
            if(boliche_direction &gt; pointer.direction + throw_deviation)
                pointer.direction += 1;
            else if(boliche_direction &lt; pointer.direction - throw_deviation)
                pointer.direction -= 1;
            else
                phase ++;
            pointer.image_angle = pointer.direction;
            break;
        case 1: //Charguing the shoot
            //Check the necessary force for a perfect shot
            distance_to_objective = distance_to_object(boliche);
            necessary_force = 0;
            distance_done = 0;
            while(distance_done &lt; distance_to_objective){
                necessary_force ++;
                distance_done += necessary_force;
            }
            //And adjust it depending the difficulty
            force_to_apply = 
                random_range(necessary_force - ((10-global.petanca_dificulty)/2),
                            necessary_force + ((10-global.petanca_dificulty)/2));
            if(throwing_power &lt; force_to_apply){
                throwing_power += 1;
                power_meter.image_yscale = throwing_power / max_power;
            }
            else{
                //Throwing the ball
                oponent_ball[turn] = instance_create(pointer.x, pointer.y, obj_oponent_ball);
                oponent_ball[turn].direction = pointer.direction;
                oponent_ball[turn].speed = throwing_power;
                throwing_power = 0;
                phase ++;
            }
            break;
        case 2: //Waiting for the launched ball to stop
            if(oponent_ball[turn].speed == 0){
                pointer.direction = 90;
                pointer.image_angle = pointer.direction;
                power_meter.image_yscale = 0;
                phase ++;
            }
            break;
        case 3: //Players turn
            pointer.direction -= -key_left + key_right;
            pointer.direction = clamp(pointer.direction, 10, 170);
            pointer.image_angle = pointer.direction;
            if(key_space_pressed == true){
                phase ++;
                power_meter.image_yscale = 0;
            }
            break;
        case 4: //Charguing the shoot
            if(throwing_power + 1 &lt;= max_power)
            throwing_power += 1;
            power_meter.image_yscale = throwing_power / max_power;
            if(key_space_released == true){
                //Throwing the ball
                player_ball[turn] = instance_create(pointer.x, pointer.y, obj_player_ball);
                player_ball[turn].direction = pointer.direction;
                player_ball[turn].speed = throwing_power;
                throwing_power = 0;
                phase ++;
            }
            break;
        case 5: //Waiting for the launched ball to stop
            if(player_ball[turn].speed == 0){
                pointer.direction = 90;
                pointer.image_angle = pointer.direction;
                power_meter.image_yscale = 0;
                //Next turn
                phase = 0;
                turn += 1;
            }            
            break;
    }
}//When finished
else if(checked == false){
    script_execute(scr_ball_distance_check);
    if(min_player_ball_distance &lt; min_oponent_ball_distance){
        winner = 1;
        //Put a maximun difficulty of 10
        if(global.petanca_dificulty &lt; 10)
            global.petanca_dificulty ++;
    }
    else{
        winner = 2;
        global.petanca_dificulty --;
    }
    checked = true;
}//Then you can exit the game
else{
    if(key_space_pressed == true){
        room_goto(global.last_place);
    }
}
</string>
